<h5>You Are Currently The Driver of <%= current_user.trips.count %> 
  <% if current_user.trips.count == 1 %>
    Trip
  <% else %>
    Trips
  <% end %>
</h5>

<h1>All Trips</h1>

<table>
  <tr>
    <th>Origin</th>
    <th>Destination</th>
    <th>Number of Seats</th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <th><%= trip.origin %></th>
    <th><%= trip.destination %></th>
    <th><%= trip.seat_number %></th>

    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Trip', new_trip_path %>

<%= gmaps("markers" => {data: @gmaps_options}, "polylines" => { data: @polylines_json}) %>